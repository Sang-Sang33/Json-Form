{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2019",
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["lib", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
